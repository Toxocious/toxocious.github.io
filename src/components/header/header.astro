---
import { Image } from 'astro:assets';

import Link from '../link/link.astro';
import Navigation from '../navigation/navigation.astro';
import ThemeToggle from '../theme_toggle/theme_toggle.astro';

import Favicon from '../../assets/favicon.ico';
import FaviconLight from '../../assets/favicon_light.png';
---

<header
    transition:persist
    transition:persist-props
    transition:name="header"
    class="w-full backdrop-blur-md flex flex-row justify-items-center items-center gap-2 px-2 py-4 sm:justify-between sm:mx-auto lg:sticky lg:top-0 lg:px-0"
>
    <div
        class="max-w-4xl w-full mx-auto flex flex-row justify-center items-center gap-2 sm:justify-between"
    >
        <section class="hidden sm:block">
            <Link href="/">
                <Image
                    transition:persist
                    src={Favicon}
                    title="Logo depicting my initials"
                    alt="Logo depicting my initials"
                    class="hidden dark:block rounded-lg transition-all ease-in-out duration-200 hover:p-1 dark:invert-0"
                    height="40"
                    width="40"
                />

                <Image
                    transition:persist
                    src={FaviconLight}
                    title="Logo depicting my initials"
                    alt="Logo depicting my initials"
                    class="block dark:hidden rounded-lg transition-all ease-in-out duration-200 hover:p-1"
                    height="40"
                    width="40"
                />
            </Link>
        </section>

        <section>
            <Navigation />
        </section>

        <section class="hidden sm:block">
            <ThemeToggle />
        </section>
    </div>
</header>
